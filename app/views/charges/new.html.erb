<div class="featurette">
  <h2 class="featurette-title">Try Tweet Speak English for 7 days free, with no risk</h2>

  <div class="row pricing">
    <div class="col-md-4">
      <%= form_tag charges_path do |form| %>
      	<%= hidden_field :charges, :plan_type, value: "ts_monthly" %>
        <div class="pricing-header">
          <h3 class="pricing-header header-price">Monthly</h3>
          <div class="pricing-plan">
            <abbr>$</abbr>
            9
            <span>/month</span>
          </div>
          <script
          src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= ENV["STRIPE_PUBLIC_KEY"] %>"
          data-amount="999"
          data-name="Tweet Speak English"
          data-description="Monthly Billing"
          data-image="/128x128.png">
        </script>
      <% end %>
        </div>
    </div>

  <div class="col-md-4">
      <%= form_tag charges_path do |form| %>
        <%= hidden_field :charges, :plan_type, value: "ts_monthly" %>
      <div class="pricing-plan-popular popular-heading">Most Popular</div>
      <div class="pricing-header">
          <h3 class="pricing-header header-price">Lifetime</h3>
          <div class="pricing-plan">
            <abbr>$</abbr>
            97
            <span>one time</span>
          </div>
          <script
          src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= ENV["STRIPE_PUBLIC_KEY"] %>"
          data-amount="9700"
          data-name="Tweet Speak English"
          data-description="Lifetime Membership"
          data-image="/128x128.png">
        </script>
      <% end %>
        </div>
    </div>

    <div class="col-md-4">
      <%= form_tag charges_path do |form| %>
        <%= hidden_field :charges, :plan_type, value: "ts_yearly" %>
        <div class="pricing-header">
          <h3 class="pricing-header header-price">Yearly</h3>
          <div class="pricing-plan">
            <abbr>$</abbr>
            59
            <span>/year</span>
          </div>
          <script
          src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= ENV["STRIPE_PUBLIC_KEY"] %>"
          data-amount="5999"
          data-name="Tweet Speak English"
          data-description="Yearly Billing"
          data-image="/128x128.png">
        </script>
      <% end %>
        </div>
    </div>

  </div><!-- end row -->
</div><!-- End Featurette -->