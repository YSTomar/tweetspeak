<div class="paper">
	<% flash.each do |name, msg| %>
    	<% if msg.is_a?(String) %>
      		<div class="alert alert-<%= name == :notice ? "success" : "danger" %> alert-dismissable">
        	<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        	<%= content_tag :div, msg, :id => "flash_#{name}" %>
      		</div>
    	<% end %>
  	<% end %>

			<div class="page-header">
				<div class="row">
					<div class="col-md-11">
						<h1 style="font-family: 'Roboto Slab', serif;">Step 1 <small>Video & Listening</small></h1>
					</div> <!-- End first column. -->

				<div class="col-md-1 top-space">
					<!-- Button trigger modal -->
					<a style="cursor: help;" data-toggle="modal" data-target="#myModal">
	  				Help?
					</a>
					<!-- <button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
	  				Launch demo modal
					</button> -->

					<!-- Modal -->
					<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	  					<div class="modal-dialog">
	    					<div class="modal-content">
	      						<div class="modal-header">
	        						<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
	        						<h4 class="modal-title" id="myModalLabel">Modal title</h4>
	      						</div>
	      					<div class="modal-body">
	        					...
	      					</div>
	      					<div class="modal-footer">
	        					<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
	        					<button type="button" class="btn btn-primary">Save changes</button>
	      					</div>
    						</div>
  						</div>
					</div>
				</div>
			</div>
		</div>


			<!-- 16:9 aspect ratio -->
			<div class="embed-responsive embed-responsive-16by9">
			  <iframe
				src="//player.vimeo.com/video/<%= @lesson.video %>?title=0&amp;byline=0&amp;
				portrait=0" width="700" height="394" frameborder="0"
				webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
			</div>
			<br>
			<br>
			<div class="panel panel-default">
  				<div class="panel-heading">
  					<h3 class="panel-title">Check your listening.</h3>
    			</div>
  				<div class="panel-body">
    				<form role="form" action="/lessons/<%= @lesson.id %>/step/2">
  						<div class="form-group">
    						<input type="text" class="form-control" id="studentAnswer" placeholder="Type the words you hear in the video..." name="words">
  						</div>
  						<div class="center"><button type="submit" class="btn btn-primary">Check Answer</button></div>
					</form>
					<br>
					<div class="center">
						<a onclick="alert('There are <%= @lesson.answer.scan(/\w+/).size %> words.')" class="btn btn-default hint" data-toggle="tooltip" data-placement="bottom" title="There are <%= @lesson.answer.scan(/\w+/).size %> words.">Get a Hint</a>
    					<script> $('.hint').tooltip() </script>
    				</div>
  				</div>
			</div>
			

			<!-- Continue Button -->
			<div class="center">
				<h3 style="font-family: 'Roboto Slab', serif;">Start today's lesson?</h3>
				<%= link_to "Let's go!", "#", class:"btn btn-primary btn-lg" %>
			</div>
</div>