<h1>Listing lessons</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th class="center">Title</th>
      <th class="center">Tags</th>
      <th class="center">Text</th>
      <th class="center"></th>
    </tr>
  </thead>

  <tbody>
    <% @lessons.each do |lesson| %>
      <tr>
        <td class="center"><%= lesson.title %></td>
        <td class="center"><%= lesson.tags %></td>
        <td><%= lesson.text %></td>
        <td>
          <div class="btn-group center">
            <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
            Action <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to 'Show', lesson, class: "btn btn-link" %></li>
            <li><%= link_to 'Edit', edit_lesson_path(lesson), class: "btn btn-link" %></li>
            <li><%= link_to 'Destroy', lesson, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></li>
          </ul>
        </div>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lesson', new_lesson_path %>
